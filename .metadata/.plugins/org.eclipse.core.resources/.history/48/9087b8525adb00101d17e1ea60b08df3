/* USER CODE BEGIN PD */
#define ECG_LEN 250


#define BLOCK_SAMPLES 32 //radimo blokovski DMA prijenos, svaki blok će imati 32 uzorka ECG signala
#define BYTES_PER_SAMPLE 2 //svaki uzorak zauzima 2 bajta (STM32F429 familija ima 12 bitni ADC [0,4096])
#define TX_BLOCK_SIZE (BLOCK_SAMPLES * BYTES_PER_SAMPLE) //ovo je ujedno i DMA buffer size
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
UART_HandleTypeDef huart5;
DMA_HandleTypeDef hdma_uart5_tx;

/* USER CODE BEGIN PV */

char transmit_buffer[TX_BLOCK_SIZE]; //string veličine 64 byte-a koji šaljemo
char recieve_buffer[TX_BLOCK_SIZE]; //trenutačno ne korisitmo
uint8_t dma_buffer[TX_BLOCK_SIZE]; //više manje identično što i char, no DMA ne zna što je character, DMA zna samo što je byte  (uint8_t)


uint8_t rx_byte;
char rx_buffer[32];
uint8_t rx_index = 0;

volatile streaming = 0; //varijabla sa kojom ćemo pokrenut omogucit tj. onemogucit dma prijenos prema uartu



typedef struct __attribute__((packed)) {
    uint8_t  header;    // 0xAA
    uint32_t ecg_raw;   // 4 bytes (MAX30003 gives 24-bit, we store in 32)
    uint32_t timestamp; // 4 bytes (HAL_GetTick)
    uint8_t  status;    // 1 byte  (e.g., 0x01)
    uint8_t  footer;    // 0x55
} ECG_Packet_t;
//__attribute__ govori kompajleru "sada  cu ti dat neku iznimnu nardebu", packed znači da se adrese u strukturi koju pošaljemo u
//mikrokontroler neće poravnati na adrese djeljive sa 4, već čemo ih "stisnut skupa


ECG_Packet_t myPacket;


volatile uint8_t transfer_complete = 1; // Zastavica sa kojom ćemo gledat je li UART transfer  gotovo i mozemo li opet preći na SPI




const uint16_t ecg_mock[ECG_LEN] = {
    // baseline
    2048,2048,2048,2048,2049,2050,2051,2050,2049,2048,

    // P wave (small bump)
    2050,2053,2058,2065,2070,2075,2070,2065,2058,2053,2050,

    // PR segment
    2049,2048,2048,2048,2048,2048,

    // Q dip
    2035,2020,2000,

    // R peak
    2300,2800,3500,4095,3600,3000,2500,

    // S dip
    2100,2000,1980,

    // ST segment
    2048,2050,2052,2054,2056,2054,2052,2050,2048,

    // T wave
    2060,2080,2100,2130,2160,2180,2200,
    2180,2160,2130,2100,2080,2060,

    // return to baseline
    2050,2048,2048,2048,2048,2048,2048,

    // rest (diastole)
    2048,2048,2048,2048,2048,2048,2048,2048,2048,2048,
    2048,2048,2048,2048,2048,2048,2048,2048,2048,2048,
    2048,2048,2048,2048,2048,2048,2048,2048,2048,2048,
    2048,2048,2048,2048,2048,2048,2048,2048,2048,2048,

    // lagani šum (realističnije)
    2049,2047,2048,2049,2048,2047,2048,2049,2048,2047,
    2048,2049,2048,2047,2048,2049,2048,2047,

    // još malo baseline da dođe do ~250
    2048,2048,2048,2048,2048,2048,2048,2048,2048,2048,
    2048,2048,2048,2048,2048,2048,2048,2048,2048,2048,
    2048,2048,2048,2048,2048,2048,2048,2048,2048,2048,
    2048,2048,2048,2048,2048,2048,2048,2048,2048,2048,
};


