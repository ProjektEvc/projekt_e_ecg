/* USER CODE BEGIN PTD */

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define SAMPLE_RATE_HZ     200
#define SAMPLE_PERIOD_MS   (1000 / SAMPLE_RATE_HZ)
#define SAMPLE_PERIOD_US   (1000000 / SAMPLE_RATE_HZ)

#define ECG_BUFFER_SIZE    100
#define PI                 3.14159265358979323846
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
SPI_HandleTypeDef hspi2;
DMA_HandleTypeDef hdma_spi2_rx;
DMA_HandleTypeDef hdma_spi2_tx;

UART_HandleTypeDef huart4;
DMA_HandleTypeDef hdma_uart4_rx;
DMA_HandleTypeDef hdma_uart4_tx;

TIM_HandleTypeDef htim2;

/* USER CODE BEGIN PV */

uint8_t rx_byte;
char rx_buffer[32];
uint8_t rx_index = 0;

volatile uint8_t streaming = 0;
volatile uint8_t transfer_complete = 1;
volatile uint8_t new_data_ready = 0;

// Parametri za sinusni signal
float sin_frequency = 1.0;  // Hz
float sin_amplitude = 1000.0;
float sin_phase = 0.0;
float sin_phase_increment;

typedef struct __attribute__((packed)) {
    uint8_t  header;    // 0xAA
    uint32_t ecg_raw;   // 4 bytes
    uint8_t  footer;    // 0x0A
} ECG_Packet_t;

ECG_Packet_t ecg_packet;
uint32_t ecg_sample_buffer[ECG_BUFFER_SIZE];
uint8_t buffer_index = 0;

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_DMA_Init(void);
static void MX_UART4_Init(void);
static void MX_SPI2_Init(void);
static void MX_TIM2_Init(void);
/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
void start_streaming(void);
void stop_streaming(void);
void generate_ecg_samples(void);
void send_next_packet(void);
void HAL_UART_TxCpltCallback(UART_HandleTypeDef *huart);
void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim);

/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_DMA_Init();
  MX_UART4_Init();
  MX_SPI2_Init();
  MX_TIM2_Init();

  /* USER CODE BEGIN 2 */

  HAL_UART_Receive_IT(&huart4, &rx_byte, 1);

  // Inicijalizacija paketa
  ecg_packet.header = 0xAA;
  ecg_packet.footer = 0x0A;
  ecg_packet.ecg_raw = 0;

  // Inicijalizacija sinusnog signala
  sin_phase_increment = (2.0 * PI * sin_frequency) / SAMPLE_RATE_HZ;

  // Postavi timer za 200 Hz
  __HAL_TIM_SET_AUTORELOAD(&htim2, (SystemCoreClock / (SAMPLE_RATE_HZ * 2)) - 1);
  __HAL_TIM_SET_PRESCALER(&htim2, 1);  // Prescaler = 2 (jer je TIM clock = SystemCoreClock/2)
  HAL_TIM_Base_Start_IT(&htim2);

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */

    // Ako je streaming aktivan i imamo novi podatak za slanje
    if (streaming && new_data_ready && transfer_complete)
    {
      new_data_ready = 0;
      send_next_packet();
    }

    // Možeš dodati i neke dodatne zadatke ovdje
    HAL_Delay(1);
  }
  /* USER CODE END 3 */
}

