/* USER CODE BEGIN 4 */

void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart)
{
  if (huart->Instance == UART4)
  {
    if (rx_byte == '\n')
    {
      rx_buffer[rx_index] = '\0';
      rx_index = 0;

      if (strcmp(rx_buffer, "#?#") == 0)
      {
        HAL_UART_Transmit(&huart4, (uint8_t*)"!", 1, 100);
      }
      else if (strcmp(rx_buffer, "#A#") == 0)
      {
        start_streaming();
      }
      else if (strcmp(rx_buffer, "#S#") == 0)
      {
        stop_streaming();
      }
    }
    else
    {
      rx_buffer[rx_index++] = rx_byte;
      if (rx_index >= sizeof(rx_buffer))
        rx_index = 0;
    }

    HAL_UART_Receive_IT(&huart4, &rx_byte, 1);
  }
}

void start_streaming(void)
{
  if (!streaming)
  {
    streaming = 1;
    transfer_complete = 1;
    new_data_ready = 0;
    sin_phase = 0.0;

    // Pokreni timer
    HAL_TIM_Base_Start_IT(&htim2);

    // Pošalji prvi paket
    generate_ecg_samples();
    send_next_packet();
  }
}

void stop_streaming(void)
{
  streaming = 0;
  HAL_TIM_Base_Stop_IT(&htim2);

  // Ako je UART transfer u tijeku, prekini ga
  if (!transfer_complete)
  {
    HAL_UART_AbortTransmit(&huart4);
  }
  transfer_complete = 1;
}

void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
  if (htim->Instance == TIM2 && streaming)
  {
    // Generiraj novi podatak svakih 5 ms (200 Hz)
    generate_ecg_samples();
    new_data_ready = 1;
  }
}

void generate_ecg_samples(void)
{
  // Generiraj sinusni val
  float sample = sin_amplitude * sin(sin_phase) + 2048;  // Centriran oko 2048

  // Ogrniči vrijednosti
  if (sample > 4095) sample = 4095;
  if (sample < 0) sample = 0;

  // Spremi u paket
  ecg_packet.ecg_raw = (uint32_t)sample;

  // Ažuriraj fazu
  sin_phase += sin_phase_increment;
  if (sin_phase > 2.0 * PI)
    sin_phase -= 2.0 * PI;
}

void send_next_packet(void)
{
  if (transfer_complete && streaming)
  {
    transfer_complete = 0;
    HAL_UART_Transmit_DMA(&huart4, (uint8_t*)&ecg_packet, sizeof(ecg_packet));
  }
}

void HAL_UART_TxCpltCallback(UART_HandleTypeDef *huart)
{
  if (huart->Instance == UART4)
  {
    transfer_complete = 1;
  }
}

/* USER CODE END 4 */

