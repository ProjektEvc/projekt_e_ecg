    // T-wave
    3650, 3720, 3800, 3880, 3940, 3980, 4000, 3990, 3960, 3920,
    3880, 3840, 3800, 3760, 3720, 3680,

    // ========== HEARTBEAT 10 ==========
    3678, 3680, 3682, 3684, 3686, 3688, 3690, 3692, 3694, 3696,
