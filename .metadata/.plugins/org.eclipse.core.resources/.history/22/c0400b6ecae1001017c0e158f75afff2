/* USER CODE BEGIN 4 */

void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart)
{
  if (huart->Instance == UART4)
  {
    if (rx_byte == '\n')
    {
      rx_buffer[rx_index] = '\0';
      rx_index = 0;

      if (strcmp(rx_buffer, "#?#") == 0)
      {
        HAL_UART_Transmit(&huart4, (uint8_t*)"!", 1, 100);
      }
      else if (strcmp(rx_buffer, "#A#") == 0)
      {
        start_streaming();
      }
      else if (strcmp(rx_buffer, "#S#") == 0)
      {
        stop_streaming();
      }
      else if (strcmp(rx_buffer, "#F1#") == 0)
      {
        // Možeš dodati druge naredbe za kontrolu parametara
      }
    }
    else
    {
      rx_buffer[rx_index++] = rx_byte;
      if (rx_index >= sizeof(rx_buffer))
        rx_index = 0;
    }

    HAL_UART_Receive_IT(&huart4, &rx_byte, 1);
  }
}

void start_streaming(void)
{
  if (!streaming)
  {
    streaming = 1;
    transfer_complete = 1;
    sin_phase = 0.0;
    last_tick = HAL_GetTick();

    // Pošalji prvi paket
    generate_ecg_sample();
    send_packet();

    // Indikacija LED-om
    HAL_GPIO_WritePin(LD2_GPIO_Port, LD2_Pin, GPIO_PIN_SET);
  }
}

void stop_streaming(void)
{
  streaming = 0;

  // Ako je UART transfer u tijeku, prekini ga
  if (!transfer_complete)
  {
    HAL_UART_AbortTransmit(&huart4);
  }
  transfer_complete = 1;

  // Indikacija LED-om
  HAL_GPIO_WritePin(LD2_GPIO_Port, LD2_Pin, GPIO_PIN_RESET);
}

void generate_ecg_sample(void)
{
  // Generiraj sinusni val
  float sample = SIN_AMPLITUDE * sin(sin_phase) + DC_OFFSET;

  // Ograniči vrijednosti (za 12-bitni raspon 0-4095)
  if (sample > 4095.0)
    sample = 4095.0;
  if (sample < 0.0)
    sample = 0.0;

  // Spremi u paket
  ecg_packet.ecg_raw = (uint32_t)sample;

  // Ažuriraj fazu za sljedeći sample
  sin_phase += phase_increment;
  if (sin_phase > TWO_PI)
    sin_phase -= TWO_PI;
}

void send_packet(void)
{
  if (transfer_complete)
  {
    transfer_complete = 0;
    HAL_UART_Transmit_DMA(&huart4, (uint8_t*)&ecg_packet, sizeof(ecg_packet));
  }
}

void HAL_UART_TxCpltCallback(UART_HandleTypeDef *huart)
{
  if (huart->Instance == UART4)
  {
    transfer_complete = 1;

    // Ako je streaming i dalje aktivan, DMA će pokrenuti sljedeći transfer
    // u main loop-u kada prođe SAMPLE_PERIOD_MS
  }
}

// Pomocna funkcija za dobivanje vremena u ms
uint32_t get_tick_ms(void)
{
  return HAL_GetTick();
}

/* USER CODE END 4 */

