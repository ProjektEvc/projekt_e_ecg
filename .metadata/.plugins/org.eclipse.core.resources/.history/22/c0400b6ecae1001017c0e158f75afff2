/* USER CODE END Header */
/* Includes ------------------------------------------------------------------*/
#include "main.h"
#include <string.h>
#include <math.h>

/* Private includes ----------------------------------------------------------*/
/* USER CODE BEGIN Includes */

/* USER CODE END Includes */

/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define SAMPLE_RATE_HZ     200
#define SAMPLE_PERIOD_MS   (1000 / SAMPLE_RATE_HZ)  // 5 ms

#define PI                 3.14159265358979323846
#define TWO_PI             (2.0 * PI)

// Parametri sinusnog signala
#define SIN_FREQ_HZ        1.0      // Frekvencija sinusnog signala
#define SIN_AMPLITUDE      1000.0   // Amplituda
#define DC_OFFSET          2048.0   // DC offset (za 12-bitni DAC)

/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
SPI_HandleTypeDef hspi2;
DMA_HandleTypeDef hdma_spi2_rx;
DMA_HandleTypeDef hdma_spi2_tx;

UART_HandleTypeDef huart4;
DMA_HandleTypeDef hdma_uart4_rx;
DMA_HandleTypeDef hdma_uart4_tx;

/* USER CODE BEGIN PV */

uint8_t rx_byte;
char rx_buffer[32];
uint8_t rx_index = 0;

volatile uint8_t streaming = 0;
volatile uint8_t transfer_complete = 1;
volatile uint8_t timer_flag = 0;

// Varijable za sinusni signal
float sin_phase = 0.0;
float phase_increment;

typedef struct __attribute__((packed)) {
    uint8_t  header;    // 0xAA
    uint32_t ecg_raw;   // 4 bytes
    uint8_t  footer;    // 0x0A
} ECG_Packet_t;

ECG_Packet_t ecg_packet;

// Varijable za kontrolu vremena
uint32_t last_tick = 0;

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_DMA_Init(void);
static void MX_UART4_Init(void);
static void MX_SPI2_Init(void);
/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
void start_streaming(void);
void stop_streaming(void);
void generate_ecg_sample(void);
void send_packet(void);
void HAL_UART_TxCpltCallback(UART_HandleTypeDef *huart);
uint32_t get_tick_ms(void);

/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_DMA_Init();
  MX_UART4_Init();
  MX_SPI2_Init();

  /* USER CODE BEGIN 2 */

  HAL_UART_Receive_IT(&huart4, &rx_byte, 1);

  // Inicijalizacija paketa
  ecg_packet.header = 0xAA;
  ecg_packet.footer = 0x0A;
  ecg_packet.ecg_raw = 0;

  // Inicijalizacija sinusnog signala
  phase_increment = (TWO_PI * SIN_FREQ_HZ) / SAMPLE_RATE_HZ;

  // Inicijalizacija SysTick za mjerenje vremena
  last_tick = HAL_GetTick();

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */

    uint32_t current_tick = HAL_GetTick();

    // Ako je streaming aktivan i prošlo je 5 ms
    if (streaming && (current_tick - last_tick >= SAMPLE_PERIOD_MS))
    {
      last_tick = current_tick;

      // Generiraj novi podatak
      generate_ecg_sample();

      // Pošalji paket samo ako je prethodni transfer završen
      if (transfer_complete)
      {
        send_packet();
      }
    }

    // Ostali zadaci mogu ići ovdje
    HAL_Delay(1);
  }
  /* USER CODE END 3 */
}

